= form_for(@alpha_user) do |f|
  - if @alpha_user.errors.any?
    #error_explanation
      %h2
        = pluralize(@alpha_user.errors.count, "error") 
        prohibited this User from being saved:  

      %ul
        - @alpha_user.errors.full_messages.each do |msg|
          %li
            = msg
  / end of error report

  %form{ class: "form", role: "form" }
    .row
      .col-lg-6
        .form-group
          = f.email_field :email, class: "form-control", 
                                  type: "email", 
                                  placeholder: "Email..."
  
    .col-lg-6
      .form-group
        = f.submit "Remind Me...", class: "btn btn-primary"
